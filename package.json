{
  "name": "jts-core",
  "version": "1.0.0",
  "description": "Janus Token System (JTS) - A two-component authentication architecture for secure, revocable, and confidential API authentication",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && chmod +x dist/cli/index.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "example": "ts-node-dev --respawn --transpile-only examples/basic-server.ts",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "jts",
    "janus",
    "token",
    "authentication",
    "jwt",
    "jws",
    "jwe",
    "security",
    "api",
    "oauth",
    "session",
    "auth",
    "bearer-token",
    "stateless",
    "revocation",
    "typescript",
    "express",
    "middleware"
  ],
  "author": "JTS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukungzulfah/jts-core.git"
  },
  "homepage": "https://github.com/ukungzulfah/jts-core#readme",
  "bugs": {
    "url": "https://github.com/ukungzulfah/jts-core/issues"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^4.0.14",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cookie-parser": "^1.4.7",
    "express": ">=4.0.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
